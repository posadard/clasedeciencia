# The Green Almanac - Apache Configuration

# Enable Rewrite Engine
RewriteEngine On

# ============================================================
# URLs AMIGABLES PARA CLASES
# ============================================================
# Redirect antiguo formato a nuevo (SEO 301)
RewriteCond %{QUERY_STRING} ^slug=([a-z0-9-]+)$
RewriteRule ^proyecto\.php$ /%1? [R=301,L]

# URL amigable para catálogo: /clases -> /catalogo.php
RewriteRule ^clases$ /catalogo.php [L,QSA]

# URLs amigables dinámicas: /{slug} puede ser ciclo, área o proyecto
# catalogo.php detectará automáticamente si el slug es un ciclo o área
# Si no es ninguno, proyecto.php manejará el slug como proyecto
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(admin|api|assets|includes|base_paginas|marco)/
RewriteCond %{REQUEST_URI} !\.php$
RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|svg|webp|ico|txt|xml|sql|md)$
RewriteRule ^([a-z0-9-]+)$ /catalogo.php?slug_dinamico=$1 [L,QSA]
# ============================================================

# Force HTTPS (uncomment in production)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (or add it, depending on preference)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Custom Error Pages
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

# Deny access to sensitive files
<FilesMatch "^(config\.php|\.env|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect admin directory (uncomment to enable IP restriction)
# <Directory /admin>
#     Order Deny,Allow
#     Deny from all
#     Allow from 127.0.0.1
#     Allow from YOUR_IP_ADDRESS
# </Directory>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json
</IfModule>

# Disable directory browsing
Options -Indexes

# Default character set
AddDefaultCharset UTF-8
