# The Green Almanac - Apache Configuration

# Enable Rewrite Engine
RewriteEngine On

# ============================================================
# URLs AMIGABLES PARA CLASES
# ============================================================
# Redirect antiguo formato a nuevo (SEO 301)
RewriteCond %{QUERY_STRING} ^slug=([a-z0-9-]+)$
RewriteRule ^proyecto\.php$ /%1? [R=301,L]

# URL amigable para catálogo: /clases -> /catalogo.php
RewriteRule ^clases$ /catalogo.php [L,QSA]

# URLs amigables para ciclos: /{slug-ciclo} -> /catalogo.php?ciclo={numero}
RewriteRule ^desarrollo-inicial$ /catalogo.php?ciclo=0 [L,QSA]
RewriteRule ^exploracion$ /catalogo.php?ciclo=1 [L,QSA]
RewriteRule ^descubrimiento$ /catalogo.php?ciclo=2 [L,QSA]
RewriteRule ^experimentacion$ /catalogo.php?ciclo=3 [L,QSA]
RewriteRule ^investigacion$ /catalogo.php?ciclo=4 [L,QSA]
RewriteRule ^analisis$ /catalogo.php?ciclo=5 [L,QSA]

# URLs amigables para áreas: /{slug-area} -> /catalogo.php?area={slug}
RewriteRule ^fisica$ /catalogo.php?area=fisica [L,QSA]
RewriteRule ^quimica$ /catalogo.php?area=quimica [L,QSA]
RewriteRule ^biologia$ /catalogo.php?area=biologia [L,QSA]
RewriteRule ^ciencias-ambientales$ /catalogo.php?area=ciencias-ambientales [L,QSA]
RewriteRule ^matematicas$ /catalogo.php?area=matematicas [L,QSA]
RewriteRule ^tecnologia-informatica$ /catalogo.php?area=tecnologia-informatica [L,QSA]
RewriteRule ^ingenieria-diseno$ /catalogo.php?area=ingenieria-diseno [L,QSA]
RewriteRule ^ciencias-sociales$ /catalogo.php?area=ciencias-sociales [L,QSA]
RewriteRule ^educacion-artistica$ /catalogo.php?area=educacion-artistica [L,QSA]
RewriteRule ^lenguaje-comunicacion$ /catalogo.php?area=lenguaje-comunicacion [L,QSA]

# Reescribir /{slug} a /proyecto.php?slug={slug}
# Excluir archivos y directorios existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(admin|api|assets|includes|base_paginas|marco)/
RewriteCond %{REQUEST_URI} !\.(php|css|js|jpg|jpeg|png|gif|svg|webp|ico|txt|xml|sql|md)$
# Reescribir solo slugs válidos (letras minúsculas, números, guiones)
RewriteRule ^([a-z0-9-]+)$ /proyecto.php?slug=$1 [L,QSA]
# ============================================================

# Force HTTPS (uncomment in production)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (or add it, depending on preference)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Custom Error Pages
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

# Deny access to sensitive files
<FilesMatch "^(config\.php|\.env|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect admin directory (uncomment to enable IP restriction)
# <Directory /admin>
#     Order Deny,Allow
#     Deny from all
#     Allow from 127.0.0.1
#     Allow from YOUR_IP_ADDRESS
# </Directory>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json
</IfModule>

# Disable directory browsing
Options -Indexes

# Default character set
AddDefaultCharset UTF-8
