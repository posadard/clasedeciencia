# The Green Almanac - Apache Configuration

# Enable Rewrite Engine
RewriteEngine On

# ============================================================
# URLs AMIGABLES PARA CLASES
# ============================================================
# Redirigir legacy a la ruta unificada
RewriteRule ^catalogo\.php$ /clases [R=301,L]
RewriteRule ^search\.php$ /clases [R=301,L]
RewriteRule ^library\.php$ /clases [R=301,L]
RewriteRule ^section\.php$ /clases [R=301,L]
RewriteRule ^article\.php$ /clases [R=301,L]

# Redirect antiguo formato a nuevo (SEO 301)
RewriteCond %{QUERY_STRING} ^slug=(clase-[a-z0-9-]+)$ [NC]
RewriteRule ^clase\.php$ /%1? [R=301,L]

# URL amigable para catálogo unificado: /clases -> /clases.php
RewriteRule ^clases$ /clases.php [L,QSA]
## Ruta amigable para filtros de áreas en clases
# /clases/areas/ambiental,fisica,tecnologia -> clases.php?area=ambiental,fisica,tecnologia
RewriteRule ^clases/areas/(.*)$ /clases.php?area=$1 [L,QSA]

## Rutas amigables para otros filtros de clases
# Ciclos múltiples: /clases/ciclos/1,2,3 -> clases.php?ciclo=1,2,3
RewriteRule ^clases/ciclos/(.*)$ /clases.php?ciclo=$1 [L,QSA]

# Grado único: /clases/grado/9 -> clases.php?grado=9
RewriteRule ^clases/grado/([0-9]{1,2})$ /clases.php?grado=$1 [L,QSA]

# Dificultad: /clases/dificultad/facil,medio -> clases.php?dificultad=facil,medio
RewriteRule ^clases/dificultad/(.*)$ /clases.php?dificultad=$1 [L,QSA]

# Competencia: /clases/competencia/12 -> clases.php?competencia=12
RewriteRule ^clases/competencia/([0-9]+)$ /clases.php?competencia=$1 [L,QSA]

# Orden: /clases/orden/recomendados -> clases.php?sort=recomendados
RewriteRule ^clases/orden/([a-z]+)$ /clases.php?sort=$1 [L,QSA]

# Combinación común: /clases/areas/{csv}/ciclos/{csv}
RewriteRule ^clases/areas/([^/]+)/ciclos/([^/]+)$ /clases.php?area=$1&ciclo=$2 [L,QSA]

# URLs amigables para listados públicos de kits y componentes
RewriteRule ^kits$ /kits.php [L,QSA]
RewriteRule ^componentes$ /componentes.php [L,QSA]
# Rutas amigables para filtros de Kits
# Áreas múltiples: /kits/areas/ambiental,fisica -> kits.php?area=ambiental,fisica
RewriteRule ^kits/areas/(.*)$ /kits.php?area=$1 [L,QSA]
# Edad única: /kits/edad/12 -> kits.php?edad=12
RewriteRule ^kits/edad/([0-9]{1,2})$ /kits.php?edad=$1 [L,QSA]
# Orden: /kits/orden/recientes -> kits.php?sort=recientes
RewriteRule ^kits/orden/([a-z]+)$ /kits.php?sort=$1 [L,QSA]
# Combinación común: /kits/areas/{csv}/orden/{key}
RewriteRule ^kits/areas/([^/]+)/orden/([^/]+)$ /kits.php?area=$1&sort=$2 [L,QSA]

# Rutas amigables para filtros de Componentes
# Categoría: /componentes/categoria/quimicos -> componentes.php?category=quimicos
RewriteRule ^componentes/categoria/([^/]+)$ /componentes.php?category=$1 [L,QSA]
# Búsqueda: /componentes/buscar/agua -> componentes.php?q=$1
RewriteRule ^componentes/buscar/(.*)$ /componentes.php?q=$1 [L,QSA]
# Combinada: /componentes/categoria/{slug}/buscar/{q}
RewriteRule ^componentes/categoria/([^/]+)/buscar/(.*)$ /componentes.php?category=$1&q=$2 [L,QSA]

# Ruta amigable para resultados de búsqueda
# Redirección 301: convertir query (?q=termino) a ruta SEO /resultados_de_busqueda/termino
RewriteCond %{THE_REQUEST} \s/resultados_de_busqueda\?q=([^\s&]+) [NC]
RewriteRule ^resultados_de_busqueda$ /resultados_de_busqueda/%1? [R=301,L]

# Redirección 301 desde buscar.php (con o sin q) a la ruta amigable con segmento
RewriteCond %{THE_REQUEST} \s/buscar\.php\?q=([^\s&]+) [NC]
RewriteRule ^buscar\.php$ /resultados_de_busqueda/%1? [R=301,L]
RewriteRule ^buscar\.php$ /resultados_de_busqueda [R=301,L]

# Ruta amigable que resuelve el segmento a query para PHP
RewriteRule ^resultados_de_busqueda/(.*)$ /buscar.php?q=$1 [L,QSA]
RewriteRule ^resultados_de_busqueda$ /buscar.php [L,QSA]

# URL amigable para detalle de componente (opcional)
RewriteRule ^componente$ /componente.php [L,QSA]

# URLs amigables para detalle de kits y componentes con prefijo en el propio slug
RewriteRule ^(kit-[a-z0-9-]+)/?$ /kit.php?slug=$1 [L,QSA]
RewriteRule ^(componente-[a-z0-9-]+)/?$ /componente.php?slug=$1 [L,QSA]
RewriteRule ^(clase-[a-z0-9-]+)/?$ /clase.php?slug=$1 [L,QSA]

# URLs amigables para manuales (slug único) y redirecciones legacy
# Canonical: /manual-{...} → manual.php?slug=manual-{...}
RewriteRule ^(manual-[a-z0-9-]+)/?$ /manual.php?slug=$1 [L,QSA]
# Legacy concatenado: /manual-{...}-kit-{...} → 301 a slug único
RewriteRule ^(manual-[a-z0-9-]+)-(kit-[a-z0-9-]+)$ /$1 [R=301,L]
# Legacy concatenado: /manual-{...}-componente-{...} → 301 a slug único
RewriteRule ^(manual-[a-z0-9-]+)-(componente-[a-z0-9-]+)$ /$1 [R=301,L]

# Redirecciones 301 desde URLs con query a las rutas bonitas
RewriteCond %{THE_REQUEST} \s/kit\.php\?slug=([^\s&]+) [NC]
RewriteRule ^kit\.php$ /%1? [R=301,L]

RewriteCond %{THE_REQUEST} \s/componente\.php\?slug=([^\s&]+) [NC]
RewriteRule ^componente\.php$ /%1? [R=301,L]


# Ruta amigable de búsqueda: /clases/buscar/{termino}
RewriteRule ^clases/buscar/(.*)$ /clases.php?q=$1 [L,QSA]

# URLs amigables dinámicas: /{slug} puede ser ciclo, área o clase
# clases.php detectará automáticamente si el slug es un ciclo o área
# Si no es ninguno, clase.php manejará el slug como clase
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(admin|api|assets|includes|base_paginas|marco)/
RewriteCond %{REQUEST_URI} !\.php$
RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|svg|webp|ico|txt|xml|sql|md)$
RewriteRule ^([a-z0-9-]+)$ /clases.php?slug_dinamico=$1 [L,QSA]
# ============================================================

# Force HTTPS (uncomment in production)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (or add it, depending on preference)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Custom Error Pages
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

# Deny access to sensitive files
<FilesMatch "^(config\.php|\.env|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect admin directory (uncomment to enable IP restriction)
# <Directory /admin>
#     Order Deny,Allow
#     Deny from all
#     Allow from 127.0.0.1
#     Allow from YOUR_IP_ADDRESS
# </Directory>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json
</IfModule>

# Disable directory browsing
Options -Indexes

# Default character set
AddDefaultCharset UTF-8
